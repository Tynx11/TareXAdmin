<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_medium">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_name"
            android:layout_margin="@dimen/margin_small"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            tools:text="Антон Дроздов"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_toRightOf="@id/tv_name"
                tools:text="+79179013784"/>
        <TextView
            android:id="@+id/tv_text_reservation"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="@string/date_reservation"/>

            <TextView
                android:id="@+id/tv_date_reservation"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_toRightOf="@+id/tv_text_reservation"
                android:layout_marginLeft="@dimen/margin_small"
                tools:text="06.03 на 13:00"/>
            <TextView
                android:id="@+id/tv_count_people"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_date_reservation"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                tools:text="100 человек"/>
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_date_reservation"
                android:layout_margin="@dimen/margin_small" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>